<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="wakusan61.spring.todo.repository.TodoRepository">

    <!-- 結果マッピング -->
    <resultMap id="TodoResultMap" type="wakusan61.spring.todo.model.Todo">
        <id column="id" property="id" />
        <result column="title" property="title" />
        <result column="completed" property="completed" />
    </resultMap>

    <!-- SELECT: 全ての Todo を取得 -->
    <select id="findAll" resultMap="TodoResultMap">
        SELECT * FROM todos
    </select>

    <!-- SELECT: ID で Todo を取得 -->
    <select id="findById" parameterType="Long" resultMap="TodoResultMap">
        SELECT * FROM todos WHERE id = #{id}
    </select>

    <!-- INSERT: 新しい Todo を追加 -->
    <insert id="insert" parameterType="wakusan61.spring.todo.model.Todo" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO todos (title, completed)
        VALUES (#{title}, #{completed})
    </insert>

    <!-- UPDATE: Todo を更新 -->
    <update id="update" parameterType="wakusan61.spring.todo.model.Todo">
        UPDATE todos
        SET title = #{title}, completed = #{completed}
        WHERE id = #{id}
    </update>

    <!-- DELETE: ID で Todo を削除 -->
    <delete id="delete" parameterType="Long">
        DELETE FROM todos WHERE id = #{id}
    </delete>

</mapper>
